root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
tab_width = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{html,css}]
indent_style = tab
indent_size = 2
tab_width = 2

[*.{js,ts}]
indent_style = tab
indent_size = 2
tab_width = 2

[*.{jsx,tsx}]
indent_style = tab
indent_size = 2
tab_width = 2

[*.py]
indent_style = tab
indent_size = 2
tab_width = 2

[*.{c,h}]
indent_style = tab
indent_size = 8
tab_width = 8
